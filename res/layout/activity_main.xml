<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.otherapp.MainActivity" >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startLocalBoundServiceInAnotherAppUsingBind"
        android:text="START LOCAL BOUND SERVICE IN ANOTHER APP_USING BIND" />
     <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startLocalBoundServiceInAnotherAppUsingStart"
        android:text="START LOCAL BOUND SERVICE IN ANOTHER APP_USING START" />

</LinearLayout>
